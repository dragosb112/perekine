    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "scraper",
            "program": "${workspaceRoot}/scraper/app.js",
            "cwd": "${workspaceRoot}/scraper",
            "protocol":"legacy",
            "args": [
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server",
            "program": "${workspaceRoot}/server/bin/www",            
            "cwd": "${workspaceRoot}/server",
            "protocol":"legacy",
            "args":[
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "address": "localhost",
            "port": 5858
        }
    ]
}